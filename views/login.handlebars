{{!-- user login form --}}
<h2>Existing UserLogin</h2>
<form class="form login-form">
    <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login"/>
    </div>
    <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login"/>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
    </div>
</form>

{{!-- new user sign up form --}}
<h3>Sign Up</h3>
<form class="form create-user-form">
    <div class="form-group">
        <label for="user-create">Select Username:</label>
        <input class="form-input" type="text" id="user-create"/>
    </div>
        <div class="form-group">
        <label for="user-create">Select Password:</label>
        <input class="form-input" type="password" id="password-create"/>
    </div>
    <div class="btn btn primary" type="submit">Sign-Up</div>
</form>

<script src="/js/login.js"></script>