{{!-- user login form--}}
<h2>Existing User Login</h2>
<form class="form login-form">
    <div class="form-group">
        {{!-- {{#if email}} --}}
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login"/>
        {{!-- {{/if}} --}}
    </div>
    <div class="form-group">
        {{!-- {{#if password}} --}}
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login"/>
        <button class="btn btn-primary" type="submit">Log-In</button>
        {{!-- {{/if}} --}}
<form class="form login-form">
</form>
{{!-- new user sign up form --}}
<h3>Sign Up</h3>
<form class="form create-user-form">
    <div class="form-group">
        <label for="first-name">First Name:</label>
        <input class="form-input" type="text" id="first-name"/>
    </div>
    <div class="form-group">
        <label for="last-name">Last Name:</label>
        <input class="form-input" type="text" id="last-name"/>
    </div>
    <div class="form-group">
        <label for="user-create">Enter Email:</label>
        <input class="form-input" type="text" id="user-create"/>
    </div>
    <div class="form-group">
        <label for="password-create">Select Password:</label>
        <input class="form-input" type="text" id="password-create"/>
    </div>
      <div class="form-group">
        <label for="user-level">Senior, Mid-Level or Junior?</label>
        <input class="form-input" type="text" id="user-level"/>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" id="sign-up" type="submit">Sign-Up</button>
    </div>
</form>
<script src="/js/login.js"></script>
<script src="/js/sign_up.js"></script>

