{{!-- user login form --}}
<h2>Existing User Login</h2>
<form class="form login-form" id="email-login">
    <div class="form-group">
        {{#if email}}
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login"/>
        {{/if}}
    </div>
    <div class="form-group">
        {{#if password}}
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login"/>
        {{/if}}
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
    </div>
</form>

{{!-- new user sign up form --}}
<h3>Sign Up</h3>
<form class="form create-user-form">
    <div class="form-group">
        <label for="create-password">Select Username:</label>
        <input class="form-input" type="text" id="user-create" />
    </div>
    <div class="form-group">
        <label for="create-password">Select Password:</label>
        <input class="form-input" type="text" id="password-create" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign-Up</button>
    </div>
</form>

<script src="/js/login.js"></script>


